{
    "version": "0.2.0",
    "buildOptions": {
        "debugType": "portable",
    },
    "configurations": [
        {
            "name": "Launch Api Example",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/Api/",
            "program": "${workspaceFolder}/Api/bin/Debug/netcoreapp3.1/Api.dll",
            "args": [],
            "stopAtEntry": false,
            "console": "externalTerminal",
        },
        {
            "name": "Launch Platformer Example",
            "type": "coreclr",
            "request": "launch",
            "symbolOptions": {
                "searchPaths": [
                    "${workspaceFolder}/LDtkMonogame.Examples/bin/Debug/netcoreapp3.1/"
                ],
                "searchMicrosoftSymbolServer": false,
                "searchNuGetOrgSymbolServer": false
            },
            "cwd": "${workspaceFolder}/LDtkMonogame.Examples/Platformer/",
            "program": "${workspaceFolder}/LDtkMonogame.Examples/Platformer/bin/Debug/netcoreapp3.1/Platformer.dll",
            "args": [],
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Launch Quickstart Example",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/LDtkMonogame.Examples/Quickstart/",
            "program": "${workspaceFolder}/LDtkMonogame.Examples/Quickstart/bin/Debug/netcoreapp3.1/Quickstart.dll>",
            "args": [],
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}