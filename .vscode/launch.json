{
    "version": "0.2.0",
    "buildOptions": {
        "debugType": "portable",

    },
    "configurations": [
        {
            "name": "Launch Api Example",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}/LDtkMonogame.Examples/Api/",
            "program": "${workspaceFolder}/LDtkMonogame.Examples/Api/bin/Debug/net5.0/Api.dll",
            "args": [],
            "stopAtEntry": false,
            "console": "externalTerminal",
        },        
        {
            "name": "Launch Platformer Example",
            "type": "coreclr",
            "request": "launch","symbolOptions": {
                "searchPaths": ["${workspaceFolder}/LDtkMonogame.Examples/bin/Debug/netcoreapp3.1/"],
                "searchMicrosoftSymbolServer": false,
                "searchNuGetOrgSymbolServer": false
            },
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}/LDtkMonogame.Examples",
            "program": "${workspaceFolder}/LDtkMonogame.Examples/bin/Debug/netcoreapp3.1/LDtkMonogame.Examples.dll",
            "args": [],
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Launch Quickstart Example",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/LDtkMonogame.Examples/Quickstart/bin/Debug/net5.0/Quickstart.dll>",
            "args": [],
            "cwd": "${workspaceFolder}/LDtkMonogame.Examples/Quickstart/",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}